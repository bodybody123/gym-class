#include <iostream>
#include "../models/ClassSession.hpp"
#include "../models/Date.hpp"

using namespace std;

// Print all ClassSession (parent) data from the linked list
void showAllParentData(ClassSession* head) {
    if (head == nullptr) {
        cout << "No class sessions available." << endl;
        return;
    }

    ClassSession* cur = head;
    while (cur != nullptr) {
        cout << "Class Session: " << cur->name << " (ID: " << cur->id << ")" << endl;
        cout << "  Schedule: " << getDate(cur->schedule) << endl;
        cout << "  Coach: " << cur->coach << endl;
        cout << "  Capacity: " << cur->capacity << " | Attendees: " << cur->attendee_count << endl;
        cout << "  Fee: " << cur->fee << endl;
        cout << "----------------------------------------" << endl;
        cur = cur->next;
    }
}
